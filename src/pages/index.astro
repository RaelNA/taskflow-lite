---
const pageTitle = "TaskFlow Lite - Login";
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>{pageTitle}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <main class="login-page">
      <section class="login-card">
        <h1 class="login-title">TaskFlow Lite</h1>
        <p class="login-subtitle">Iniciar Sesión</p>

        <form id="loginForm" class="login-form">
          <div class="form-group">
            <label for="email">Correo electrónico</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              placeholder="tu@correo.com"
            />
          </div>

          <div class="form-group">
            <label for="password">Contraseña</label>
            <input
              type="password"
              id="password"
              name="password"
              required
              placeholder="••••••••"
            />
          </div>

          <button type="submit" id="loginButton" class="btn-primary">
            <span id="loginButtonText">Iniciar sesión</span>
            <span id="loginSpinner" class="spinner hidden"></span>
          </button>

          <p id="loginError" class="error-message hidden"></p>
        </form>

        <p class="register-hint">
          ¿No tienes cuenta?
          <a href="#" id="fakeRegisterLink">(Más adelante podemos añadir registro)</a>
        </p>
      </section>
    </main>

    <style>
      :root {
        --color-bg: #0f172a;
        --color-card: #1e293b;
        --color-border: #334155;
        --color-text: #e5e7eb;
        --color-muted: #9ca3af;
        --color-primary: #22c55e;
        --color-primary-hover: #16a34a;
        --color-danger: #ef4444;
        --color-input-bg: #020617;
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
          sans-serif;
        background: radial-gradient(circle at top, #1f2937 0%, #020617 60%);
        color: var(--color-text);
        min-height: 100vh;
        display: flex;
      }

      .login-page {
        margin: auto;
        padding: 1.5rem;
        width: 100%;
        max-width: 420px;
      }

      .login-card {
        background-color: rgba(15, 23, 42, 0.95);
        border-radius: 1rem;
        border: 1px solid var(--color-border);
        padding: 2rem 2.25rem;
        box-shadow: 0 25px 50px -12px rgba(15, 23, 42, 0.9);
      }

      .login-title {
        margin: 0;
        font-size: 1.8rem;
        font-weight: 700;
        text-align: center;
      }

      .login-subtitle {
        margin-top: 0.5rem;
        margin-bottom: 2rem;
        text-align: center;
        font-size: 0.9rem;
        color: var(--color-muted);
      }

      .login-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.35rem;
      }

      label {
        font-size: 0.9rem;
      }

      input {
        background-color: var(--color-input-bg);
        border: 1px solid var(--color-border);
        color: var(--color-text);
        border-radius: 0.5rem;
        padding: 0.7rem 0.8rem;
        font-size: 0.95rem;
        outline: none;
        transition: border-color 0.15s ease, box-shadow 0.15s ease,
          background-color 0.15s ease;
      }

      input::placeholder {
        color: #6b7280;
      }

      input:focus {
        border-color: var(--color-primary);
        box-shadow: 0 0 0 1px rgba(34, 197, 94, 0.4);
      }

      .btn-primary {
        margin-top: 0.5rem;
        width: 100%;
        border-radius: 999px;
        border: none;
        background: linear-gradient(
          to right,
          var(--color-primary),
          #4ade80
        );
        color: #022c22;
        font-weight: 600;
        padding: 0.75rem 1rem;
        font-size: 0.95rem;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        transition: transform 0.1s ease, box-shadow 0.1s ease,
          background 0.15s ease;
      }

      .btn-primary:hover:not(.disabled) {
        background: linear-gradient(
          to right,
          var(--color-primary-hover),
          #22c55e
        );
        box-shadow: 0 15px 30px -12px rgba(34, 197, 94, 0.5);
        transform: translateY(-1px);
      }

      .btn-primary.disabled {
        opacity: 0.7;
        cursor: default;
        box-shadow: none;
        transform: none;
      }

      .spinner {
        width: 16px;
        height: 16px;
        border-radius: 999px;
        border: 2px solid rgba(15, 23, 42, 0.2);
        border-top-color: #022c22;
        animation: spin 0.6s linear infinite;
      }

      @keyframes spin {
        to {
          transform: rotate(360deg);
        }
      }

      .error-message {
        margin-top: 0.75rem;
        font-size: 0.85rem;
        color: var(--color-danger);
        text-align: center;
      }

      .register-hint {
        margin-top: 1.5rem;
        font-size: 0.85rem;
        text-align: center;
        color: var(--color-muted);
      }

      .register-hint a {
        color: var(--color-primary);
        text-decoration: none;
        font-weight: 500;
      }

      .register-hint a:hover {
        text-decoration: underline;
      }

      .hidden {
        display: none;
      }

      @media (max-width: 480px) {
        .login-card {
          padding: 1.75rem 1.5rem;
        }

        .login-title {
          font-size: 1.6rem;
        }
      }
    </style>

    <script type="module">
      const API_BASE = "http://localhost/taskflow-lite/api";

      const form = document.getElementById("loginForm");
      const errorEl = document.getElementById("loginError");
      const button = document.getElementById("loginButton");
      const buttonText = document.getElementById("loginButtonText");
      const spinner = document.getElementById("loginSpinner");

      function setLoading(isLoading) {
        if (isLoading) {
          button.classList.add("disabled");
          button.setAttribute("disabled", "true");
          spinner.classList.remove("hidden");
          buttonText.textContent = "Validando...";
        } else {
          button.classList.remove("disabled");
          button.removeAttribute("disabled");
          spinner.classList.add("hidden");
          buttonText.textContent = "Iniciar sesión";
        }
      }

      function showError(message) {
        errorEl.textContent = message;
        errorEl.classList.remove("hidden");
      }

      function clearError() {
        errorEl.textContent = "";
        errorEl.classList.add("hidden");
      }

      form?.addEventListener("submit", async (event) => {
        event.preventDefault();
        clearError();
        setLoading(true);

        const email = /** @type {HTMLInputElement} */ (
          document.getElementById("email")
        ).value.trim();
        const password = /** @type {HTMLInputElement} */ (
          document.getElementById("password")
        ).value.trim();

        try {
          const res = await fetch(`${API_BASE}/auth_login.php`, {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ email, password }),
          });

          const data = await res.json().catch(() => ({}));

          if (!res.ok || !data.success) {
            const msg =
              data?.error ||
              "No ha sido posible iniciar sesión. Revisa tus datos.";
            showError(msg);
            setLoading(false);
            return;
          }

          // Guardar usuario en localStorage (opcional para el dashboard)
          if (data.user) {
            localStorage.setItem("taskflow_user", JSON.stringify(data.user));
          }

          // Redirigir al dashboard
          window.location.href = "/dashboard";
        } catch (error) {
          console.error(error);
          showError(
            "Error de conexión con el servidor. Inténtalo de nuevo en unos segundos."
          );
          setLoading(false);
        }
      });
    </script>
  </body>
</html>
